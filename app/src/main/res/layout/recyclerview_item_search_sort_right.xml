<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_107"
    android:id="@+id/root">
    <RelativeLayout
        android:id="@+id/rl_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="大类"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/color_100"
        android:layout_marginBottom="8dp" />
    <TextView
        android:id="@+id/tv_title_whole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部 >"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/color_001"
        android:textSize="12sp"/>
    </RelativeLayout>

    <com.example.tworecyclerview.MyGridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_whole"
        android:background="@color/color_109"
        android:numColumns="3">
    </com.example.tworecyclerview.MyGridView>
</RelativeLayout>